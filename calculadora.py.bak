#!/usr/bin/env python3
"""
Classe responsável por realizar operações de cálculo básicas.
"""

class Calculadora:
    """
    Implementa as operações de soma, subtração e multiplicação.
    
    Args:
        None
    
    Returns:
        None
    
    Raises:
        ValueError: Se os operandos forem inválidos para a operação solicitada.
    """

    def __init__(self):
        pass

    def soma(self, num1, num2):
        """
        Realiza a operação de somar dois números.
        
        Args:
            num1 (float): Primeiro número.
            num2 (float): Segundo número.
        
        Returns:
            float: Resultado da operação de soma.
        """
        return num1 + num2

    def subtracao(self, num1, num2):
        """
        Realiza a operação de subtração entre dois números.
        
        Args:
            num1 (float): Primeiro número.
            num2 (float): Segundo número.
        
        Returns:
            float: Resultado da operação de subtração.
        """
        return num1 - num2

    def multiplicacao(self, num1, num2):
        """
        Realiza a operação de multiplicar dois números.
        
        Args:
            num1 (float): Primeiro número.
            num2 (float): Segundo número.
        
        Returns:
            float: Resultado da operação de multiplicação.
        """
        return num1 * num2